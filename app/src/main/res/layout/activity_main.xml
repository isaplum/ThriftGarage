<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.krixniemann.thriftgarage.MainActivity">

    <TextView
        android:text="Welcome to Thrift Garage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvMenu"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    <TextView
        android:text="Please select an option to get started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOption"
        android:layout_below="@+id/tvMenu"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Create Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/createButton"
        android:layout_below="@+id/tvOption"
        android:layout_alignParentStart="true"
        android:elevation="9dp"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:text="Browse Current Entries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/browseButton"
        android:elevation="9dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/createButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/browseButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:id="@+id/LogoutButton" />
</RelativeLayout>
